          <!-- DataTales Example -->
          <div class="card shadow mb-8">
            <div class="card-header py-3 bg-white">
              <h6 class=" text-primary">Viagens de:</h6>
              <h3 class=" text-gray-dark"><%=pacientes.nome %> </h3>
              <div class="navbar-right">
                <button 
                type="button"
                 class="btn btn-primary float-right"
                 data-id="<%= pacientes._id%>"
                 data-toggle="modal"
                 data-target="#inserirViagemModal"
                 >Inserir Viagem</button>
            </div>
            </div> 

                      
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Destino</th>
                      <th>Data</th>   
                      <th>Horário</th>        
                    </tr>
                  </thead>
                  <tbody>

                    <% pacientes.viagens.forEach(function(paciente) { %>
                      <tr>                        
                        <td>  <%= paciente.destino %>   </td>
                        <td > <%= paciente.data %> </td>
                        <td > <%= paciente.hora %> </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="modal fade" id="inserirViagemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Inserir Viagem</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/viagens" method="POST">          
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <legend>Data da viagem:</legend>
                        <input
                          name="data"
                          type="text"
                          class="form-control form-control-user modal-nascimento"
                          placeholder="00/00/0000"
                          data-mask="00/00/0000"
                        />
                      </div>
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <legend>Destino:</legend>
                        <input
                          name="destino"
                          type="text"
                          class="form-control form-control-user modal-fone"
                          placeholder="Digite o destino aqui"
                        />
                        <input
                          name="id"                    
                          type="text"
                          class="form-control form-control-user modal-id"
                          
                          style="visibility: hidden"
                        />
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <legend>Horário:</legend>
                        <input
                          name="hora"
                          type="text"
                          class="form-control form-control-user modal-nascimento"
                          placeholder="00:00:00"
                          data-mask="00:00:00"
                        />
                      </div>
                    </div>
                  <button type="submit" class="btn btn-primary float-right">Enviar</button>
                  </form>
                </div>
                
                  
                
              </div>
            </div>
          </div>



