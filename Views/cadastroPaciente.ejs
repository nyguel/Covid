<%- include('partials/header.ejs'); %>
<div class="d-flex justify-content-center">
      <div class="card shadow col-sm-6 mb-3 mb-sm-0">
        <div class="card-header py-3 bg-white">
          <h5 class="m-0 font-weight-bold text-dark">
            Cadastro de Paciente
          </h5>
        </div>
        <div class="card-body p-0"></div>
        <div class="p-5">
          <form class="user" name="formulario" id="formulario" action="/pacientes" method="POST">
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <legend style="font-size: 15px;">CPF:</legend>
                <input
                  name="cpf"
                  required
                  type="text"
                  class="form-control form-control-user"
                  id="exampleInputPassword"
                  placeholder="000.000.000-00"
                  data-mask="000.000.000-00"
                />
              </div>
            </div>

            <div class="form-group">
              <legend style="font-size: 15px;">Nome:</legend>
              <input
                name="nome"
                type="text"
                id="pacienteNome"
                required
                class="form-control form-control-user"
                id="input_name"
                placeholder="Digite aqui o nome"
              />
            </div>
            <div class="form-group">
              <legend style="font-size: 15px;">Endereço:</legend>
              <input
                required
                id="pacienteEndereco"
                name="endereco"
                type="text"
                class="form-control form-control-user"
                id="exampleInputEmail"
                placeholder="Digite aqui o endereço"
              />
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <legend style="font-size: 15px;">Bairro:</legend>
                <select  
                name = "bairro" 
                class="custom-select"
                required>
                  <option selected>Selecione o bairro</option>
                  <option value="centro">Centro</option>
                  <option value="texaco">Texaco</option>
                  <option value="tancredo neves">Tancredo Neves</option>
                  <option value="alto da colina">Alto da Colina</option>
                  <option value="elias david">Elias David</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <legend style="font-size: 15px;">Data de nascimento:</legend>
                <input
                  name="nascimento"
                  type="text"
                  required
                  class="form-control form-control-user"
                  id="exampleInputPassword"
                  placeholder="00/00/0000"
                  data-mask="00/00/0000"
                />
              </div>
              <div class="col-sm-6 mb-3 mb-sm-0">
                <legend style="font-size: 15px;">Telefone:</legend>
                <input
                  name="telefone"
                  required
                  type="text"
                  class="form-control form-control-user"
                  id="exampleInputPassword"
                  placeholder="(00) 00000-0000"
                  data-mask="(00) 00000-0000"
                />
              </div>
            </div>
            <div class="custom-control custom-checkbox">
              <input
                type="checkbox"
                class="custom-control-input"
                id="customCheck"
                name="attsuspeito"
              />
              <label class="custom-control-label" for="customCheck"
                >Declarar suspeito para ser visitado pela equipe de enfermagem
              </label>
              
            </div>
            <br>
            <button              
              type="submit"
              class="btn btn-dark btn-user btn-block"
            >
              Enviar
            </button>
            <% if (msg[0].texto) { %>
            <div class="alert alert-success text-center">
              <%=msg[0].texto%>
            </div>
            <% } %>
          </form>
        </div>
      </div>
    </div>
      <%- include("partials/footer.ejs");%> 

  </body>
</html>
