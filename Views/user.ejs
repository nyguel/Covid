<%- include('partials/header.ejs'); %>

<div class="card shadow mb-8">
  <div class="card-header py-3 bg-white">
    <h6 class="text-primary">Viagens de:</h6>
    <h3 class="text-gray-dark"><%=pacientes.nome %></h3>
    <div class="navbar-right">
      <button
        type="button"
        class="btn btn-dark float-right"
        data-id="<%= pacientes._id%>"
        data-toggle="modal"
        data-target="#inserirViagemModal"
      >
        Inserir Viagem
      </button>
    </div>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>Destino</th>
            <th>Data</th>
            <th>Hor√°rio</th>
          </tr>
        </thead>
        <tbody>
          <% pacientes.viagens.forEach(function(paciente) { %>
          <tr>
            <td><%= paciente.destino %></td>
            <td><%= paciente.data %></td>
            <td><%= paciente.hora %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs");%>
